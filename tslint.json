{
  "extends": [
    "tslint-config-airbnb"
  ],
  "rules": {
    "max-line-length": false,
    "object-shorthand-properties-first": false,
    "variable-name": false,
    "function-name": false,
    "import-name": false,
    "no-increment-decrement": false,
    "align": false,
    "prefer-array-literal": false,
    "no-this-assignment": [
      true,
      {
        "allow-destructuring": true
      }
    ]
  },
  "linterOptions": {
    "exclude": [
      "src/sidebarTab/**",
      "src/common/assets/**",
      "demo/**"
    ]
  }
}